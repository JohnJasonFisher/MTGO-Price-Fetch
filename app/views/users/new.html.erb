<!--=== Content Part ===-->
<div class="container content">
  <div class="row">
    <div class="funny-boxes funny-boxes-left-orange col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
      <div class="reg-page">
        <div class="reg-header">
          <h2>Create A New Account</h2>
        </div>


        <%= form_tag '/signup', method: :post do %>

        <div class="input-group margin-bottom-20">
          <span class="input-group-addon"><i class="fa fa-user"></i></span>
          <%= text_field_tag :name, nil, class: "form-control", placeholder: "Create Username" %>
        </div>

        <div class="input-group margin-bottom-20">
          <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
          <%= text_field_tag :email, nil, class: "form-control", placeholder: "Email" %>
        </div>

        <div class="input-group margin-bottom-20">
          <span class="input-group-addon"><i class="fa fa-lock"></i></span>
          <%= password_field_tag :password, nil, placeholder: "New Password", class: "form-control" %>
        </div>
        <div class="input-group margin-bottom-20">
          <span class="input-group-addon"><i class="fa fa-check"></i></span>
          <%= password_field_tag :password_confirmation, nil, placeholder: "Confirm New Password", class: "form-control" %>
        </div>


        <div class="row">
          <div class="col-md-6 checkbox">
          </div>
          <div class="col-md-6">
            <%= submit_tag "Submit", class: "btn-u pull-right" %>
          </div>
        </div>
        <% end %>

      </div>
    </div>
  </div><!--/row-->
</div><!--/container-->
<!--=== End Content Part ===-->
