<h1>Login</h1>
<%= form_tag '/login', method: :post do %>
  <div>
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>
  <div>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <%= submit_tag "Submit" %>
<% end %>
<li><a href="/signup">Sign up if you do not have an account.</a></li>
<div ng-app="app">
  {{ 1 + 1 }}
</div>